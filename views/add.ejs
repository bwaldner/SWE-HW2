<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add a Recipe</title>
    <link rel="stylesheet" href="/add.css">
</head>
<body>
    <div class="container">
        <h1>Add a New Recipe</h1>

        <!-- Ensure form method and action are correctly defined -->
        <form method="POST" action="/add">
            <label for="RecipeName">Recipe Name:</label>
            <input type="text" id="RecipeName" name="RecipeName" placeholder="e.g., Chicken Alfredo" required>

            <label for="Protein">Protein Type:</label>
            <input type="text" id="Protein" name="Protein" placeholder="e.g., Chicken" required>

            <label for="PrepTime">Prep Time (minutes):</label>
            <input type="number" id="PrepTime" name="PrepTime" required>

            <label for="CookTime">Cook Time (minutes):</label>
            <input type="number" id="CookTime" name="CookTime" required>

            <label for="Servings">Servings:</label>
            <input type="number" id="Servings" name="Servings" required>

            <h3>Select Ingredients:</h3>
            <% ingredients.forEach(ingredient => { %>
                <div class="ingredient-checkbox">
                    <input type="checkbox" name="IngredientIDs[]" value="<%= ingredient.IngredientID %>">
                    <label><%= ingredient.IngredientName %></label>
                </div>
            <% }); %>
            <input type="submit" value="Add Recipe">
        </form>

        <div style="margin-top: 20px;">
            <a href="/" class="btn-home">‚Üê Back to Home</a>
        </div>
    </div>
</body>
</html>
